
// üî• Simple Interactive JavaScript Quiz App üî•

// Use constants and variables
const quizTitle = "üéØ JavaScript Basics Quiz";
let score = 0;
let playAgain = true;

// Array of question objects (strings and correct answers)
const questions = [
  {
    question: "1Ô∏è‚É£ What keyword is used to declare a variable in JavaScript?",
    answer: "let"
  },
  {
    question: "2Ô∏è‚É£ Which data type is used to store text values?",
    answer: "string"
  },
  {
    question: "3Ô∏è‚É£ What operator is used to compare both value and type?",
    answer: "==="
  },
  {
    question: "4Ô∏è‚É£ True or False: JavaScript is a case-sensitive language.",
    answer: "true"
  },
  {
    question: "5Ô∏è‚É£ What function is used to display messages in the console?",
    answer: "console.log"
  }
];

// Main quiz loop ‚Äî allows replay
do {
  score = 0;
  const incorrectQuestions = [];

  alert(quizTitle + "\nAnswer the following questions:");

  // Loop through questions
  for (let i = 0; i < questions.length; i++) {
    const userInput = prompt(questions[i].question);
    if (!userInput) {
      alert("You skipped this question.");
      continue;
    }

    // Case-insensitive comparison
    if (userInput.trim().toLowerCase() === questions[i].answer.toLowerCase()) {
      alert("‚úÖ Correct!");
      score++;
    } else {
      alert(`‚ùå Wrong! The correct answer was "${questions[i].answer}".`);
      incorrectQuestions.push(questions[i].question);
    }
  }

  // Display total results
  alert(
    `üéØ Quiz Complete!\n\nYour Score: ${score}/${questions.length}`
  );

  if (incorrectQuestions.length > 0) {
    let wrongList = incorrectQuestions.join("\n- ");
    alert(`You missed the following questions:\n- ${wrongList}`);
  }

  // Replay option
  const retry = prompt("Would you like to play again? (yes/no)");
  playAgain = retry && retry.toLowerCase() === "yes";

} while (playAgain);

alert("üëã Thanks for playing the JavaScript Quiz!");
